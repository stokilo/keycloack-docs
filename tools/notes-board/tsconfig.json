{
  "compilerOptions": {
    "target": "ESNext", // Or ES2020, ES2022
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Ensure ESNext or at least ES2015.Promise or ES2015 is here
    "module": "ESNext",
    "moduleResolution": "bundler", // Recommended for Vite, or "node"
    "jsx": "react-jsx", // Or "preserve" depending on your setup
    // ... other options
    "skipLibCheck": true, // Can sometimes help, but better to fix the root cause
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src", "vite.config.ts"], // BE SPECIFIC HERE!
  "references": [{ "path": "./tsconfig.node.json" }] // Common in Vite setups
}